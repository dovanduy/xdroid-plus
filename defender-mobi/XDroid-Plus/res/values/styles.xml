<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_green_big">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@drawable/selector_btn_text</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector_btn_green</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingTop">7.0dip</item>
        <item name="android:paddingRight">20.0dip</item>
        <item name="android:paddingBottom">7.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/btn_shadow</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="mainscreen_scan_view">
        <item name="android:layout_weight">2.0</item>
    </style>

    <style name="mainscreen_items_view">
        <item name="android:layout_weight">5.0</item>
    </style>

    <style name="mainscreen_tab_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/list_line_selector</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="mainscreen_drawer_radio" parent="@style/mainscreen_tab_btn">
        <item name="android:paddingTop">7.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
    </style>

    <style name="MenuItem">
        <item name="android:textColor">@color/btn_text_pressed</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/popup_menu_item_bg</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingTop">7.0dip</item>
        <item name="android:paddingRight">20.0dip</item>
        <item name="android:paddingBottom">7.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="listview">
        <item name="android:listSelector">@drawable/selector_list_item</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight">2.0px</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
    </style>

    <style name="TextView">
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextView.Shadowed" parent="@style/TextView">
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextView.Shadowed.Inverse" parent="@style/TextView.Shadowed">
        <item name="android:shadowColor">#ff000000</item>
    </style>

    <style name="TextAppearance.Widget" parent="@style/TextAppearance" />

    <style name="TextAppearance.Widget.Button" parent="@style/TextAppearance.Widget">
        <item name="android:textColor">@color/textcolor_widget_default</item>
    </style>

    <style name="TextView.Detail">
        <item name="android:textColor">@color/textcolor_black</item>
        <item name="android:textSize">13.0sp</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">@style/TextAppearance.Widget.Button</item>
        <item name="android:textColor">@null</item>
        <item name="android:background">@drawable/btn_normal</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:minHeight">36.0dip</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Button.Header" parent="@style/Button">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/btn_header</item>
        <item name="android:maxHeight">32.0dip</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:shadowColor">#ff000000</item>
    </style>

    <style name="TextView.ListSeparator" parent="@style/TextView">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff737373</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/separator</item>
        <item name="android:paddingLeft">5.0sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30.0dip</item>
    </style>

    <style name="TextAppearance.Medium" parent="@style/TextAppearance">
        <item name="android:textColor">@color/textcolor_black</item>
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="TextAppearance.Small" parent="@style/TextAppearance">
        <item name="android:textColor">@color/textcolor_black</item>
        <item name="android:textSize">14.0sp</item>
    </style>

    <style name="popwindow_anim_style" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="request_dlg" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat">
